@namespace OneStreamWebBlazor.Components.Components
@inherits ComponentBase
@typeparam TItem

<XFSelect TValue="object" SelectedValue="@SelectedValue" SelectedValueChanged="@HandleSelectedValueChanged" Class="@Class" Style="@Style" Attributes="@Attributes">
    @if (Data != null)
    {
        foreach (var item in Data)
        {
            var text = TextField?.Invoke(item);
            var value = ValueField?.Invoke(item);
            <XFSelectItem TValue="object" Value="@value">@text</XFSelectItem>}
    }
    @ChildContent
</XFSelect>